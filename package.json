{
  "name": "conversational-booking",
  "description": "With words!",
  "version": "2.0.0",
  "skill": {
    "namespace": "conversational-booking",
    "upgradeIgnoreList": []
  },
  "homepage": "https://github.com/spruce-conversational-booking-skill",
  "bugs": {
    "url": "https://github.com/spruce-conversational-booking-skill/issues"
  },
  "keywords": [],
  "scripts": {
    "boot": "node build/index",
    "boot.local": "node -r ts-node/register -r tsconfig-paths/register ./src/index",
    "health": "yarn boot --health",
    "health.local": "yarn boot.local --health",
    "build.ci": "yarn build.tsc && yarn build.resolve-paths && yarn lint",
    "build.dev": "yarn build.tsc --sourceMap ; yarn resolve-paths.lint",
    "build.copy-files": "mkdir -p build && rsync -avzq --exclude='*.ts' ./src/ ./build/",
    "build.dist": "yarn build.tsc && yarn build.resolve-paths",
    "build.resolve-paths": "resolve-path-aliases --target build --patterns '**/*.js,**/*.d.ts'",
    "build.tsc": "yarn build.copy-files && tsc",
    "clean": "yarn clean.build",
    "clean.all": "yarn clean.dependencies && yarn clean.build",
    "clean.build": "rm -rf build/",
    "clean.dependencies": "rm -rf node_modules/ package-lock.json yarn.lock",
    "fix.lint": "eslint --fix --cache '**/*.ts'",
    "heroku-postbuild": "yarn build.dev",
    "lint": "eslint --cache '**/*.ts'",
    "lint.tsc": "tsc -p . --noEmit",
    "post.watch.build": "yarn build.copy-files && yarn build.resolve-paths",
    "rebuild": "yarn clean.all && yarn && yarn build.dev",
    "release": "semantic-release",
    "resolve-paths.lint": "yarn build.resolve-paths ; yarn lint",
    "test": "jest",
    "update.dependencies": "yarn clean.dependencies && yarn",
    "watch.build.dev": "tsc-watch --sourceMap --onCompilationComplete 'yarn post.watch.build'",
    "watch.lint": "concurrently 'yarn lint' \"chokidar 'src/**/*' -c 'yarn lint.tsc'\"",
    "watch.rebuild": "yarn clean.all && yarn && yarn watch.build.dev",
    "watch.tsc": "tsc -w"
  },
  "dependencies": {
    "@sprucelabs/calendar-utils": "^34.0.28",
    "@sprucelabs/error": "^5.0.593",
    "@sprucelabs/globby": "^0.0.7",
    "@sprucelabs/mercury-client": "^38.0.35",
    "@sprucelabs/mercury-core-events": "^18.0.37",
    "@sprucelabs/mercury-types": "^42.1.23",
    "@sprucelabs/schema": "^28.5.156",
    "@sprucelabs/spruce-conversation-plugin": "^56.1.7",
    "@sprucelabs/spruce-core-schemas": "^37.2.22",
    "@sprucelabs/spruce-event-plugin": "^56.1.7",
    "@sprucelabs/spruce-event-utils": "^34.0.35",
    "@sprucelabs/spruce-permission-plugin": "^27.1.5",
    "@sprucelabs/spruce-skill-booter": "^56.1.7",
    "@sprucelabs/spruce-skill-utils": "^28.1.112",
    "dotenv": "^16.0.3",
    "node-nlp": "^4.26.1"
  },
  "devDependencies": {
    "@sprucelabs/jest-json-reporter": "^7.0.14",
    "@sprucelabs/jest-sheets-reporter": "^2.0.21",
    "@sprucelabs/resolve-path-aliases": "^1.1.202",
    "@sprucelabs/semantic-release": "^4.0.8",
    "@sprucelabs/spruce-test-fixtures": "^56.1.7",
    "@sprucelabs/test": "^7.7.432",
    "@sprucelabs/test-utils": "^3.4.27",
    "@types/node": "^18.15.5",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.36.0",
    "eslint-config-spruce": "^10.12.0",
    "jest": "^29.5.0",
    "jest-circus": "^29.5.0",
    "prettier": "^2.8.6",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.0",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^5.0.2"
  },
  "engines": {
    "yarn": "1.x"
  },
  "jest": {
    "testRunner": "jest-circus/runner",
    "maxWorkers": 4,
    "testTimeout": 120000,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/tmp/",
      "<rootDir>/src/",
      "<rootDir>/node_modules/",
      "<rootDir>/build/__tests__/testDirsAndFiles/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js?(x)"
    ],
    "moduleNameMapper": {
      "^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
    }
  }
}
